{
    "name": "pestphp/pest",
    "description": "The Pest Testing framework.",
    "keywords": [
        "php",
        "pest",
        "unit",
        "test",
        "testing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "nunomaduro/collision": "dev-stable",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Pest\\": "src/"
        },
        "files": [
            "src/globals.php",
            "compiled/globals.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/phpunit/"
        }
    },
    "require-dev": {
        "ergebnis/phpstan-rules": "^0.14.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "illuminate/console": "^7.0",
        "illuminate/support": "^7.0",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12.19",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "rector/rector": "^0.7.6",
        "symfony/var-dumper": "^5.0",
        "thecodingmachine/phpstan-strict-rules": "^0.12.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "bin": [
        "bin/pest"
    ],
    "scripts": {
        "compile": "@php ./scripts/compile.php",
        "lint": "rector process src && php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run && rector process src --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "bin/pest --colors=always --exclude-group=integration",
        "test:integration": "bin/pest --colors=always --group=integration",
        "test:integration:snapshots": "REBUILD_SNAPSHOTS=true bin/pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit",
            "@test:integration"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pest\\Laravel\\PestServiceProvider"
            ]
        }
    }
}
